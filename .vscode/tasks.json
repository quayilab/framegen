{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc build active file",
			"command": "g++",
			"args": [
				"-g",
				"-I",
				"/home/agung/Applications/vcpkg/installed/x64-linux/include",
				//"-ltinyxml2",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"$(pkgconf",
				"--cflags", 
				"--libs",
				"argtable3",
				"tinyxml2)"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}